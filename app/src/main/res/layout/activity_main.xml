<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="657dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/monoton"
                android:text="Inicio De Sesión"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:textSize="40dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="226dp"

            android:gravity="top"
            app:srcCompat="@drawable/habitacion_removebg_preview__1___1_" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/input_bg" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/imageView4"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"

                android:paddingRight="20dp"

                app:srcCompat="@drawable/input_bg" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="37dp"
                android:layout_height="59dp"


                android:layout_alignBottom="@+id/imageView4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="334dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/ic_person" />

            <EditText
                android:id="@+id/editTextTextEmailAddress2"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_alignEnd="@+id/imageView4"

                android:layout_alignBottom="@+id/imageView4"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress" />

            <ImageView
                android:id="@+id/imageView6"

                android:layout_width="37dp"
                android:layout_height="59dp"


                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="334dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/colorOrange"
                android:foregroundTint="@color/colorOrange"
                app:srcCompat="@android:drawable/ic_secure"
                app:tint="@color/colorOrange" />

            <EditText
                android:id="@+id/editTextTextEmailAddress3"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_alignEnd="@+id/imageView3"

                android:layout_alignBottom="@+id/imageView3"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="6dp"
                android:ems="10"
                android:hint="Contraseña"

                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/button"
                android:layout_width="343dp"
                android:layout_height="58dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentEnd="true"

                android:layout_centerHorizontal="@+id/imageView3"


                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/colorOrange"
                android:text="Iniciar Sesión" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button"
                android:layout_centerHorizontal="@+id/button"
                android:text="Forgot Password?"
                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="229dp"
                android:layout_height="53dp"
                android:layout_below="@id/textView4"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="143dp"
                android:text="¿No tienes una cuenta?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView4"
                android:layout_alignRight="@id/textView5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="-67dp"
                android:text="Registrate"

                android:textAlignment="center"
                android:textColor="@color/colorOrange"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>