<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelListadoTareas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/monoton"
            android:gravity="center"
            android:text="Listado de tareas"
            android:textSize="35dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnListTasks"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/baseline_format_list_bulleted_24" />

            <ImageButton
                android:id="@+id/btnCheck"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:contentDescription="Home"
                android:src="@drawable/baseline_check_circle_outline_24" />

            <ImageButton
                android:id="@+id/btnCruz"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:contentDescription="Home"
                android:src="@drawable/baseline_close_24"
                app:tint="@color/colorWhite" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ContenedorTareas"
            android:layout_width="match_parent"
            android:layout_height="672dp"
            android:layout_gravity="center"
            android:paddingBottom="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:contentDescription="Home"
                android:src="@drawable/baseline_home_24" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/baseline_menu_book_24" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:contentDescription="Home"
                android:src="@drawable/ic_circle_add"
                app:tint="@color/purple_500" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/baseline_analytics_24" />

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:contentDescription="Home"
                android:src="@drawable/ic_person"
                app:tint="@color/colorWhite" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>